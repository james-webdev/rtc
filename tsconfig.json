{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "skipLibCheck": false,
    "strict": true
  },
  "include": ["**/*.ts", "**/*.tsx", "tailwind.config.ts"],
  "exclude": ["node_modules", "./tsconfig.tsbuildinfo"]
}
